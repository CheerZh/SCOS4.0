<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <ImageView
        android:id="@+id/food_image"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_foreground"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/food_image"
        android:layout_toRightOf="@+id/food_image"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        >
    </TextView>

    <TextView
        android:id="@+id/food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/food_image"
        android:layout_toRightOf="@+id/food_image"
        android:layout_below="@+id/food_name"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp">
    </TextView>
    <TextView
        android:id="@+id/stocks_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/food_price"
        android:layout_toRightOf="@+id/food_price"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/food_name"
        android:layout_marginTop="10dp"
        android:text="@string/stocks"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:id="@+id/foods_stocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/stocks_label"
        android:layout_toRightOf="@+id/stocks_label"
        android:layout_below="@+id/food_name"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#436EEE" />

    <Button
        android:id="@+id/order_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:paddingBottom = "10dp"
        android:paddingTop = "10dp"
        android:text="@string/order"
        android:textSize="18sp" />
</RelativeLayout>